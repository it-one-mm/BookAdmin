<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_author"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <RelativeLayout

        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="200dp"
        android:background="@drawable/cornerbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <GridLayout
            android:backgroundTint="@color/colorPrimary"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <Button
                    android:onClick="PDF"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:drawableTop="@drawable/ic_openbook"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="20dp"
                    android:background="@drawable/cornerbg"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:text="PDF Books (12) "/>


            <Button
                android:onClick="buAudioBook"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_weight="1"
                android:background="@drawable/cornerbg"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@drawable/ic_audiobook"
                android:drawableTint="@color/colorPrimaryDark"
                android:padding="20dp"
                android:text="Audio Books (14)" />

            <Button
                    android:onClick="buAuthor"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="20dp"
                    android:drawableTop="@drawable/ic_author"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:layout_weight="1"
                    android:background="@drawable/cornerbg"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:text="Authors (4) "/>
                <Button
                    android:onClick="buCategory"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="20dp"
                    android:drawableTop="@drawable/ic_category"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:layout_weight="1"
                    android:background="@drawable/cornerbg"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:text="Category (8)"/>

        </GridLayout>

    </RelativeLayout>
</RelativeLayout>